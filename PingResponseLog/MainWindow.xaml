<Window x:Class="PingResponseLog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingResponseLog"
        mc:Ignorable="d"
        Title="PingResponseLog" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="Addresses" Height="23" Margin="10,10,75,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="Ping" Content="Ping" Height="23" Margin="0,10,10,0" VerticalAlignment="Top" Click="PingOnClick" HorizontalAlignment="Right" Width="60"/>
        <TextBox x:Name="Result" Margin="10,38,10,10" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" IsReadOnly="True" />
    </Grid>
</Window>
